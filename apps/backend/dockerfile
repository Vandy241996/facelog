# Base stage
FROM node:20-alpine AS deps

WORKDIR /app
COPY package*.json ./

# If using production mode
RUN npm ci --omit=dev

# Or fallback if the above fails (you can test locally first)
# RUN npm install

# Final stage
FROM node:20-alpine

WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .

ENV NODE_ENV=production

EXPOSE 4000
CMD ["npm", "start"]
