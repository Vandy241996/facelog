# Stage 1: Build the frontend
FROM node:20-alpine AS builder

# Set working directory
WORKDIR /app

# Copy only package files to install dependencies
COPY apps/frontend/package*.json ./apps/frontend/

# Install production dependencies for frontend
RUN npm install --prefix ./apps/frontend --production

# Copy the full frontend source code
COPY apps/frontend ./apps/frontend

# Build the frontend app
RUN npm run --prefix ./apps/frontend build || cat ./apps/frontend/.next/build-manifest.json

# Stage 2: Run the production app
FROM node:20-alpine

WORKDIR /app

# Copy built app and node_modules from builder stage
COPY --from=builder /app/apps/frontend ./apps/frontend

# Set environment and expose port
ENV NODE_ENV=production
EXPOSE 3000

# Start the app
CMD ["npm", "run", "start", "--prefix", "apps/frontend"]
